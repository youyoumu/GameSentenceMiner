{
  "name": "gamesentenceminer",
  "productName": "GameSentenceMiner",
  "version": "1.12.2",
  "description": "GameSentenceMiner",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "dev": "concurrently --prefix none \"tsc --watch\" \"pnpm run start\"",
    "app:dir": "electron-builder --dir",
    "app:dist": "tsc && electron-builder",
    "app:deploy": "electron-builder --publish=always"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "tsc": {},
  "build": {
    "asar": false,
    "appId": "com.bpwhelan.gsm",
    "files": [
      "dist/main/**/*",
      "electron-src/main/index.html",
      "icon.ico"
    ],
    "extraFiles": [
      {
        "from": "electron-src/assets",
        "to": "resources/assets"
      },
      {
        "from": "GameSentenceMiner",
        "to": "resources/GameSentenceMiner"
      },
      {
        "from": "pyproject.toml",
        "to": "resources/pyproject.toml"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "sign": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "extraFiles": [
        {
          "from": "GSM_Overlay/out",
          "to": "resources/GSM_Overlay"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bpwhelan",
        "repo": "GameSentenceMiner",
        "releaseType": "release"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bpwhelan/GameSentenceMiner.git"
  },
  "author": "Beangate",
  "license": "LGPL-3.0-only",
  "devDependencies": {
    "@types/ws": "^8.18.0",
    "concurrently": "^9.2.1",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "detect-port": "^2.1.0",
    "electron-log": "^5.3.2",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.3.9",
    "fuse.js": "^7.1.0",
    "node-window-manager": "^2.2.4",
    "nodejs-file-downloader": "^4.13.0",
    "obs-websocket-js": "^5.0.6",
    "tar": "^7.4.3",
    "ws": "^8.18.1"
  }
}
